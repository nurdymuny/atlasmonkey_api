<div class="row">
  <div class="col-md-12">
    <%= nested_form_for @venue do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Venue Name" %>
      </div>
      <div class="form-group">
        <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
      </div>
      
      <h4>Levels</h4>
      <%= f.fields_for :levels do |field| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= field.text_field :name, class: "form-control", placeholder: "Name" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= field.link_to_remove "", class: "glyphicon glyphicon-trash btn btn-danger pull-right delete_path" %>
            </div>
          </div>
        </div>
      <% end %>
      
      <%= f.link_to_add "+ Add More Levels", :levels, class: "btn btn-success pull-right" %>
      
      <div class="form-group">
        <%= f.submit f.object.new_record? ? 'Create' : 'Update', class: "btn btn-primary" %>
        <%= link_to "Go Back", venues_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
