<br/><br/>
<div class="col-md-12">
  <div class="col-md-12 nopadding">
    <div class="col-md-6 nopadding">
      <h2 style="margin: 0;">Venue</h2>
    </div>
    <div class="col-md-6 nopadding text-right">
      <%#= link_to "+ Add New Venue", new_venue_path, method: :get, class: "btn btn-default pull-right" %>
      <%= link_to "Go Back", venues_path,class: "btn btn-primary" %>
    </div>
  </div>
  <br/><br/>
  <% if @venue.present? %>
    <table class="table table-responsive table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @venue.name%></td>
          <td><%= @venue.location %></td>
          <td colspan="2">
            <%=link_to "Edit", edit_venue_path(@venue), method: :get, class: "btn btn-primary" %>
            <%=link_to "Manage Levels", venue_levels_path(@venue), method: :get, class: "btn btn-primary" %>
            <%=link_to "Delete", venue_path(@venue), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure, you want to delete this venue?"} %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
