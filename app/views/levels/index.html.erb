<br/><br/>
<div class="col-md-12">
  <div class="col-md-12 nopadding">
    <div class="col-md-6 nopadding">
      <h2 style="margin: 0;">Levels</h2>
    </div>
    <div class="col-md-6 nopadding">
      <div class="col-md-10 nopadding">
        <%= link_to "+ Add New Level", new_venue_level_path(@venue), method: :get, class: "btn btn-default pull-right" %>
      </div>
      <div class="col-md-2">
        <%= link_to "Go Back", venue_path(@venue),class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <br/><br/>
  <table class="table table-responsive table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if @levels.present? %>
        <% @levels.each do |level| %>
          <tr>
            <td><%= level.name %></td>
            <td>
              <%= link_to "Edit", edit_venue_level_path(@venue, level), method: :get, class: "btn btn-primary" %>
              <%= link_to "Manage Block", venue_level_path(@venue, level), method: :get, class: "btn btn-primary" %>
              <%= link_to "Delete", venue_level_path(@venue, level), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure, you want to delete this level?"} %>
              <%= link_to "Manage Layout", manage_layout_path(venue_id: level.venue_id, level_id: level.id), method: :get, class: "btn btn-primary" %>
              <%= link_to "Seat Allocate", seat_allocate_path(venue_id: level.venue_id, level_id: level.id), method: :get, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="3">Levels are not present for this venue</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
