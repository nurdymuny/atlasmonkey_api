<div class="row">
  <div class="col-md-12">
    <%= form_for [@venue, @level, @block, @seat] do |f| %>
      <div class="form-group">
        <%= f.text_field :seat_number, class: "form-control", placeholder: "Seat Number" %>
      </div>
      <div class="form-group">
        <%= f.text_field :latitude, class: "form-control", placeholder: "Latitude of Seat" %>
      </div>
      <div class="form-group">
        <%= f.text_field :longitude, class: "form-control", placeholder: "Longitude of seat" %>
      </div>
      <div class="form-group">
        <%= f.select :user_id, User.all.map{|u| [u.email, u.id]}, {include_blank: "Select User"}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit f.object.new_record? ? 'Create' : 'Update', class: "btn btn-primary" %>
        <%= link_to "Go Back", venue_level_block_seats_path(@venue, @level, @block), class: "btn btn-primary" %>
      </div>
    <% end %>    
  </div>
</div>
